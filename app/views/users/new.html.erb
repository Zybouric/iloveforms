<!-- FORM_FOR-->
<%= form_for @users, url: {action: "create"} do |f| %>
 <fieldset>
    <ul>
        <label for= "username" required="required"> Username:</label> <%= f.text_field :username %></br>
        <label for= "email"> Email: </label><%= f.text_field :email %></br>
        <label for= "bio">Gossip: </label><%= f.text_area :bio, size: "33x12" %></br>
    </ul>
    <%= f.submit value="Send" %> 
    <a href="/users"><input type="button" value="Cancel"></a>

</fieldset>
<% end %>

